<picture>
    <source srcset="{{ image(image.path, 'mobileWP') }}, {{ image(image.path, 'mobileX2WP') }} 2x" media="(max-width: 768px)" type="image/webp">
    <source srcset="{{ image(image.path, 'mobile') }}, {{ image(image.path, 'mobileX2') }} 2x" media="(max-width: 768px)">
    <source srcset="{{ image(image.path, 'smallWP') }}, {{ image(image.path, 'smallX2WP') }} 2x" media="(max-width: 1440px)" type="image/webp">
    <source srcset="{{ image(image.path, 'small') }}, {{ image(image.path, 'smallX2') }} 2x" media="(max-width: 1440px)">
    <source srcset="{{ image(image.path, 'mediumWP') }}" media="(max-width: 2160px)" type="image/webp">
    <source srcset="{{ image(image.path, 'medium') }}" media="(max-width: 2160px)">
    <source srcset="{{ image(image.path, 'largeWP') }}" media="(min-width: 2161px)" type="image/webp">
    <source srcset="{{ image(image.path, 'large') }}" media="(min-width: 2161px)">
    <img title="{{ image.slug }}" src="{{ image(image.path, 'mobile') }}" {% if lazy %}loading="lazy"{% endif %} />
</picture>
