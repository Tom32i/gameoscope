<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title block('title') %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('style') }}
        {% endblock %}
    </head>
    <body class="{% block body_class '' %}">
        {% block body %}
            <div class="container">
                <header class="header">
                    {% block header %}
                            {% block header_title %}
                                <h1>Game-o-scope</h1>
                            {% endblock %}
                            <nav class="links">
                                <a href="https://instagram.com/gamoscope" class="icon-instagram" title="Instagram"></a>
                                <a href="https://twitter.com/tom32i" class="icon-twitter" title="Twitter"></a>
                            </nav>
                    {% endblock %}
                </header>
                {% block sub_header %}{% endblock %}
                <main class="content">
                    {% block content %}{% endblock %}
                </main>
                {% block footer %}{% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
